<div class="container px-5 px-sm-0">
  <div class="error_explanation">
        <% if @book.errors.any? %>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %>(error)</li>
          <% end %>
          </ul>
        <% end %>
    </div>
  <div class="row">
    <%= render 'book', book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thread>
          <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
            <th colspan="3"></th>
          </tr>
        </thread>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>