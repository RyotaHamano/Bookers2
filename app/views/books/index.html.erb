<div class="container px-5 px-sm-0">
  <div class="error_explanation">
        <% if @book.errors.any? %>
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %>(error)</li>
          <% end %>
          </ul>
        <% end %>
    </div>
  <div class="row">
    <%= render 'book', book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thread>
          <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
            <th colspan="3"></th>
          </tr>
        </thread>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user_id) do %><%= image_tag book.user.get_profile_image(80,80) %><% end %></td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
              <td>
                <% if book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(book), method: :delete, class:'text-danger' do %>
                    <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(book), method: :post, class:'text-primary' do %>
                    <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
                  <% end %>
                <% end %>
              </td>
              <td>コメント数:<%= book.book_comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>