<div class="container px-5 px-sm-0">
  <div class="error_explanation">
    <% if @book.errors.any? %>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th><%= link_to follows_user_path(@book.user.id) do %><%= @book.user.followers.count %><% end %></th>
          </tr>
          <tr>
            <th>followers</th>
            <th><%= link_to followers_user_path(@book.user.id) do%><%= @book.user.followeds.count %><% end %></th>
          </tr>
        </tbody>
      </table>
      <% if current_user != @book.user %>
        <% if current_user.following_users.include?(@book.user) %>
            <%= link_to 'フォロー外す', user_relationships_path(@book.user.id), method: :delete, class:'btn btn-info ' %>
        <% else %>
             <%= link_to 'フォローする', user_relationships_path(@book.user.id), method: :post, class:'btn btn-success' %>
        <% end %>
      <% end %>
      <div class="row">
        <%= link_to edit_user_path(@book.user.id), class:'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new, url: books_path, method: :post do |f| %>
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book', class:'btn btn-success'%>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
            <tr>
              <td><%= link_to user_path(@book.user.id) do %><%= image_tag @book.user.get_profile_image(80,80) %><br /><%= @book.user.name %><% end %></td>
              <td><%= link_to book_path(@book.id) do %><%= @book.title %><% end %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.favorited_by?(current_user) %>
                  <%= link_to book_favorites_path(@book), method: :delete, class:'text-danger' do %>
                    <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                  <% end %>
                <% else %>
                  <%= link_to book_favorites_path(@book), method: :post, class:'text-primary' do %>
                    <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                  <% end %>
                <% end %>
              </td>
              <td>コメント数:<%= @book.book_comments.count %></td>
              <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path(@book.id), class:'btn btn-sm btn-success ' %></td>
              <td><%= link_to 'Destroy', book_path, method: :delete, data: {confirm: "本当に消しますか？"}, class:'btn btn-sm btn-danger' %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
      <table class="table">
        <% @comments.each do |book_comment| %>
        <tr>
            <td><%= link_to user_path(book_comment.user_id) do %>
              <%= image_tag book_comment.user.get_profile_image(80,80) %><br>
              <%= book_comment.user.name %>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user_id == current_user.id %>
              <td><%= link_to 'Destroy', book_book_comment_path(book_comment), method: :delete, class: "btn btn-sm btn-danger"%></td>
            <% end %>
        </tr>
        <% end %>
      </table>
      <%= form_with model: @comment, url: book_book_comments_path(@book.id), local:true do |f| %>
        <%= f.text_area :comment %>
        <%= f.submit '送信' %>
      <% end %>
    </div>
  </div>
</div>