<div class="container">
  <div class="row">
    <div class="col">
      <h1>Follow Users</h1>
      <% if @users == nil %>
        <p>ユーザーはいません</p>
      <% else %>
        <table class="table">
          <thread>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
          </thread>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(80,80) %></td>
                <td><%= user.name %></td>
                <td>フォロー数：<%= user.followers.count %></td>
                <td>フォロワー数：<%= user.followeds.count %></td>
                <td><%= link_to 'Show', user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>