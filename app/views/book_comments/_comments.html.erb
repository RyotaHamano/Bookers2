<table class="table">
  <% @comments.each do |book_comment| %>   
    <tr>
      <td><%= link_to user_path(book_comment.user_id) do %>
        <%= image_tag book_comment.user.get_profile_image(80,80) %><br>
        <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <% if book_comment.user_id == current_user.id %>
        <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book_id, book_comment.id), remote: true, method: :delete, class: "btn btn-sm btn-danger", data: {"turbolinks" => false} %></td>
      <% end %>
    </tr>
  <% end %>
</table>