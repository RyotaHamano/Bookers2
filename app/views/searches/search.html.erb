<div class="container">
  <div class="row">
    <div class="col">
      <h1>
        <% if @range == 'User' %>
          User search for "<%= params[:word] %>"
        <% elsif @range == 'Book' %>
          Book search for "<%= params[:word] %>"
        <% end %>
      </h1>
      <table class="table">
        <% if @range == 'User' %>
        <thread>
          <tr>
            <th>image</th>
            <th>name</th>
            <th>introduction</th>
          </tr>
        </thread>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80,80) %></td>
              <td><%= link_to user_path(user.id) do %><%= user.name %><% end %></td>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
        <% elsif @range == 'Book' %>
        <thread>
          <tr>
            <th>image</th>
            <th>title</th>
            <th>opinion</th>
          </tr>
        </thread>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>